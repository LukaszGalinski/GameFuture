<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/black_t">

        <ImageView
            android:id="@+id/shop_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cabal"
            android:contentDescription="@string/shop_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/shop_item_price"
            style="@style/textShadowOverlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="cena: 29,99 zÅ‚"
            android:padding="@dimen/menu_recycler_text_padding"
            app:layout_constraintStart_toStartOf="@id/shop_logo"
            app:layout_constraintTop_toBottomOf="@id/shop_logo"
            app:layout_constraintEnd_toEndOf="@id/shop_logo"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/shop_logo" />

        <View
            android:id="@+id/bottomNavigationShadow"
            android:layout_width="match_parent"
            android:layout_height="7dp"
            app:layout_constraintBottom_toBottomOf="@id/shop_logo"
            android:background="@drawable/shadow_background"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>