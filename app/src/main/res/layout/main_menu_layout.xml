<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    >

    <ImageButton
        android:id="@+id/menu_toggle_btn"
        android:layout_width="0dp"
        android:layout_height="@dimen/toggle_icon_height"
        android:src="@android:drawable/ic_menu_sort_by_size"
        android:contentDescription="@string/toggle_menu"
        android:background="@android:color/transparent"
        app:layout_constraintWidth_percent="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <SearchView
        android:id="@+id/menu_search_bar"
        android:layout_width="0dp"
        android:layout_height="@dimen/search_bar_height"
        android:searchIcon="@drawable/search_icon"
        app:layout_constraintWidth_percent="0.7"
        android:background="@color/halfTransparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/menu_favourites"
        android:layout_width="0dp"
        android:layout_height="@dimen/favourite_icon_height"
        android:background="@android:color/transparent"
        android:contentDescription="@string/favourites"
        android:src="@android:drawable/btn_star_big_on"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent=".15"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/menu_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:layout_marginTop="@dimen/menu_default_margin"
        app:layout_constraintHeight_percent=".8"
        app:layout_constraintTop_toBottomOf="@id/menu_search_bar"/>

    <ProgressBar
        android:id="@+id/games_progressBar"
        android:layout_width="200dp"
        android:layout_height="5dp"
        android:visibility="gone"
        style="@style/customProgressbar"
        app:layout_constraintBottom_toBottomOf="@id/menu_recycler"
        app:layout_constraintEnd_toEndOf="@id/menu_recycler"
        app:layout_constraintStart_toStartOf="@id/menu_recycler"
        app:layout_constraintTop_toBottomOf="@+id/menu_search_bar"
        />
    <TextView
        android:id="@+id/loadingInformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/menu_default_margin"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:text="@string/loading_information"
        app:layout_constraintTop_toBottomOf="@id/games_progressBar"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/footer_height"
        android:background="@color/halfTransparent"
        app:layout_constraintTop_toBottomOf="@id/menu_recycler"/>
</androidx.constraintlayout.widget.ConstraintLayout>