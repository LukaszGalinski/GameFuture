<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@android:id/background">
        <shape>
            <corners
                android:radius="5dip" />
            <gradient
                android:startColor="#D25C5757"
                android:centerColor="#504F4F"
                android:centerY="0.50"
                android:endColor="#454545"
                android:angle="270" />
        </shape>
    </item>
    <item
        android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners
                    android:radius="5dip" />
                <gradient
                    android:startColor="#D5FFFFFF"
                    android:endColor="#FFFFFF"
                    android:angle="90" />
            </shape>
        </clip>
    </item>

</layer-list>